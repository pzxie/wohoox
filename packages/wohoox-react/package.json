{
  "name": "wohoox-react",
  "version": "1.7.1",
  "description": "Easy,lightweight and reactive store by react hooks",
  "author": "pzxie <pzxie@outlook.com>",
  "main": "dist/index.js",
  "unpkg": "dist/wohoox-react.umd.production.min.js",
  "umd:main": "dist/wohoox-react.umd.production.min.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format cjs,umd,esm --target node",
    "test": "jest --passWithNoTests",
    "test:react-legency": "cross-env reactLegency=true jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "lint": "eslint src/**/* --fix --ext .ts --ext .js --ext .tsx --ext .jsx",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "keywords": [
    "react",
    "store",
    "hooks",
    "reactive",
    "observer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pzxie/wohoox.git"
  },
  "homepage": "https://github.com/pzxie/wohoox.git#readme",
  "dependencies": {
    "wohoox": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "license": "MIT"
}
